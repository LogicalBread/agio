{
  "name": "agio",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "NODE_ENV=production bun run setup:all && wrangler d1 migrations apply -y --remote agio && wrangler deploy --minify",
    "lint": "biome lint ./src",
    "format": "biome format --write ./src",
    "setup:all": "bun run setup:targets && bun run setup:commands",
    "setup:targets": "bun run ./src/bin/genTargets.ts",
    "setup:commands": "bun run ./src/bin/registerSlashCommands.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "0.40.1",
    "discord-api-types": "0.38.1",
    "discord-interactions": "4.1.0",
    "hono": "4.6.20",
    "openai": "4.96.2"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@cloudflare/workers-types": "4.20250129.0",
    "@types/bun": "1.2.1",
    "discord.js": "14.17.3",
    "glob": "11.0.1",
    "wrangler": "4.14.0"
  }
}
